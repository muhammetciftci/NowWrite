<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NowWrite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nowwrite_theme_blue</item>
        <item name="colorPrimaryVariant">@color/nowwrite_theme_blue</item>
        <item name="colorOnPrimary">@color/nowwrite_theme_darkblue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/nowwrite_theme_darkblue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorSecondary">@color/nowwrite_theme_lightblue</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>


        <!-- Customize your theme here. -->
    </style>
</resources>